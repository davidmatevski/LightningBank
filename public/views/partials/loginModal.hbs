 <!-- Login Modal -->
 <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalTitle"
     aria-hidden="true">
     <div class="modal-dialog modal-dialog-centered" role="document">
         <div class="modal-content">
             <div class="modal-header" style="border-bottom: none;">
                 {{!-- <h5 class="text-center modal-title" id="loginModalTitle">Log In</h5> --}}
                 <img src="/img/logo.png" width="175" height="175" class="mx-auto" />
             </div>
             <div class="modal-body">
                 <div class="row">
                     <div class="col-6 offset-3">
                         <div id="loginError" class="alert alert-danger" role="alert">     
                         </div>
                     </div>
                 </div>

                 <form name="loginForm">

                     <div class="form-row">
                         <div class="form-group col-10 offset-1">
                             <label for="username">Username</label>
                             <input type="text" name="username" class="form-control form-control-lg"
                                 placeholder="Username" />
                         </div>
                     </div>

                     <div class="form-row">
                         <div class="form-group col-10 offset-1">
                             <label for="password">Password</label>
                             <input type="password" name="password" class="form-control form-control-lg"
                                 placeholder="Password" />
                         </div>
                     </div>

                 </form>
             </div>
             <div class="modal-footer">
                 <button id="loginBtn" type="button" class="w-100 btn btn-primary mx-auto">Log In</button>
             </div>
         </div>
     </div>
 </div>
 <!-- !Login Modal -->

<!-- Loading Modal -->
 <div class="modal" id="loadingModal" tabindex="-2" role="dialog" aria-labelledby="loadingModalTitle"
     aria-hidden="true">
     <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
         <div class="modal-content">
             <div class="modal-body">
                 <div class="text-center">
                     <div class="spinner-grow text-primary spinner-xl" role="status">
                         <span class="sr-only">Logging In...</span>
                     </div>
                 </div>

                 <div class="row">
                     <div class="col-6 offset-3">
                         <div class="text-center h3">Logging In...</div>
                     </div>
                 </div>
             </div>
         </div>
     </div>
 </div>
 <!-- !Loading Modal -->