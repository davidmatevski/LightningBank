    <div class="container">
        <div class="row mt-4">
            <div id="msgSection" class="col">

            </div>
        </div>
    </div>

    <div class="container bg-light">
        <div class="row mt-4 pt-3">
            <div class="col">
                <div class="h5">
                    <span class="badge badge-primary mr-2">Account ID</span>
                    {{userFriendlyID}} 
                </div>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-3 my-4">
                <div class="nav flex-column nav-pills" id="sideBar" role="tablist" aria-orientation="vertical">
                    <a class="nav-link active" id="myAccountTab" data-toggle="pill" href="#myAccountContent" role="tab"
                        aria-controls="myAccountContent" aria-selected="true">My Account</a>
                    <a class="nav-link" id="paymentTab" data-toggle="pill" href="#paymentContent" role="tab"
                        aria-controls="paymentContent" aria-selected="false">Make a Payment</a>
                        <a class="nav-link" id="lendingTab" data-toggle="pill" href="#lendingContent" role="tab"
                           aria-controls="lendingContent" aria-selected="false">Lending</a>

                </div>

            </div>
            <div class="col-9">
                <div class="tab-content" id="sideBarContent">
                    <div class="tab-pane fade show active" id="myAccountContent" role="tabpanel">

                        <div class="container mt-3">
                            <div class="row">
                                <div class="col-3 offset-3">
                                    <div class="labelText h5">Account Balance:</div>
                                </div>
                                <div class="col-3">
                                    <div class="valueText h5">${{balance}}</div>
                                </div>
                            </div> <!--!row-->
                            <div class="row">
                                <div class="col-3 offset-3">
                                    <div class="labelText h5">Loan Balance:</div>
                                </div>
                                <div class="col-3">
                                    <div class="valueText h5">-${{loanBalance}}</div>
                                </div>
                            </div> <!--!row-->

                            <form name="accountForm">
                                <input type="hidden" name="accountID" value="{{userFriendlyID}}" />

                                <div class="row my-4">
                                    <div class="col-4 offset-4">
                                        <div class="form-group">
                                            <label for="amount">Enter Amount</label>
                                            <input type="number" name="amount" class="form-control form-control-lg" />
                                        </div>
                                    </div>
                                </div> <!--row my-4-->
                                <div class="row mb-3">
                                    <div class="col-2 offset-8">
                                        <div id="btnDeposit" class="btn btn-success btn-fullsized">Deposit</div>
                                    </div>
                                    <div class="col-2">
                                        <div id="btnWithdraw" class="btn btn-danger btn-fullsized">Withdraw</div>
                                    </div>
                                </div> <!--row mb-3-->
                            </form>
                        </div> <!--!container-->
                    </div> <!--!myAccountContent-->

                    <div class="tab-pane fade" id="paymentContent" role="tabpanel">
                        <div class="container mt-3">
                            <div class="row">
                                <div class="col-3 offset-3">
                                    <div class="labelText h5">Account Balance:</div>
                                </div>
                                <div class="col-3">
                                    <div class="valueText h5">${{balance}}</div>
                                </div>
                            </div> <!--!row-->
                            <div class="row">
                                <div class="col-3 offset-3">
                                    <div class="labelText h5">Loan Balance:</div>
                                </div>
                                <div class="col-3">
                                    <div class="valueText h5">-${{loanBalance}}</div>
                                </div>
                            </div> <!--!row-->

                            <form name="paymentForm">
                              <input type="hidden" name="accountID" value="{{userFriendlyID}}" />
                              
                                <div class="row my-4">
                                    <div class="col-4 offset-4">
                                        <div class="form-group">
                                            <label for="amount">Enter Amount</label>
                                            <input type="number" name="amount" class="form-control form-control-lg" />
                                        </div>
                                    </div>
                                </div> <!--row my-4-->
                                <div class="row mb-3">
                                    <div class="col-3 offset-9">
                                        <div id="btnPayNow" class="btn btn-success btn-fullsized">Pay Now</div>
                                    </div>
                                </div> <!--row mb-3-->
                            </form>
                        </div> <!--!container-->
                    </div> <!--paymentContent-->

                    <div class="tab-pane fade" id="lendingContent" role="tabpanel">
                        <div class="container mt-3">
                            <div class="row">
                                <div class="col-3 offset-3">
                                    <div class="labelText h5">Account Balance:</div>
                                </div>
                                <div class="col-3">
                                    <div class="valueText h5">${{balance}}</div>
                                </div>
                            </div> <!--!row-->
                            <div class="row">
                                <div class="col-3 offset-3">
                                    <div class="labelText h5">Loan Balance:</div>
                                </div>
                                <div class="col-3">
                                    <div class="valueText h5">-${{loanBalance}}</div>
                                </div>
                            </div> <!--!row-->

                            <form name="lendingForm">
                              <input type="hidden" name="accountID" value="{{userFriendlyID}}" />

                                <div class="row my-4">
                                    <div class="col-4 offset-4">
                                        <div class="form-group">
                                            <label for="amount">Enter Amount</label>
                                            <input type="number" name="amount" class="form-control form-control-lg" />
                                        </div>
                                    </div>
                                </div> <!--row my-4-->
                                <div class="row mb-3">
                                    <div class="col-3 offset-9">
                                        <div id="btnLoan" class="btn btn-danger btn-fullsized">Request Loan</div>
                                    </div>
                                </div> <!--row mb-3-->
                            </form>
                        </div> <!--!container-->
                    </div>


                </div>
            </div>


        </div>
    </div>
   

<!-- Action Loading Modal -->
 <div class="modal" id="actionLoadingModal" tabindex="-2" role="dialog" aria-labelledby="actionLoadingModalTitle"
     aria-hidden="true">
     <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
         <div class="modal-content">
             <div class="modal-body">
                 <div class="text-center">
                     <div class="spinner-grow text-primary spinner-xl" role="status">
                         <span class="sr-only">Transaction...</span>
                     </div>
                 </div>
             </div>
         </div>
     </div>
 </div>
 <!-- !Action Loading Modal -->

